@model IEnumerable<ChemistWarehouse.Models.ProductInfo>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div id="demo" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
            <li data-target="#demo" data-slide-to="3"></li>
            <li data-target="#demo" data-slide-to="4"></li>
            <li data-target="#demo" data-slide-to="5"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/1.jpg" alt="Slide 1" style="width:100%;height:500px">
                <div class="carousel-caption">

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/2.jpg" alt="Slide 2" style="width:100%;height:500px">
                <div class="carousel-caption text-dark">

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/3.png" alt="Slide 3" style="width:100%;height:500px">
                <div class="carousel-caption">

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/4.jpg" alt="Slide 4" style="width:100%;height:500px">
                <div class="carousel-caption">

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/5.png" alt="Slide 5" style="width:100%;height:500px">
                <div class="carousel-caption">

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/6.png" alt="Slide 6" style="width:100%;height:500px">
                <div class="carousel-caption">

                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
    <hr />
    <div class="text-center">
        <h1 class="display-4">Welcome To Chemical Warehouse</h1>
    </div>
    <div class="row" style="margin-bottom:50px;">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card w-100">
                    <center>
                        <img src="~/uploads/@item.ProductID@item.Extension" alt="" style="width:100%">
                    </center>
                    <div class="card-body">
                        <h5 class="card-text">
                            @item.ProductName
                        </h5>
                        <p class="card-text">$ @item.SalePrice</p>
                        <a class="btn btn-dark btn-block" asp-action="ViewDetails" asp-route-id="@item.ProductID">View Details</a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
