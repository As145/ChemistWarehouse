@model IEnumerable<ChemistWarehouse.Models.ProductInfo>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Product Info Operations</h1>
        <p>View All Product Info</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-dark">Add New Product Info</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Photo
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SalePrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="width:20%">
                    <img src="~/uploads/@item.ProductID@item.Extension" class="img-fluid" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.SalePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ProductID">Edit</a>
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.ProductID">More Details</a>
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>